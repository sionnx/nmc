{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],  
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"] ,
    "paths": {
      "@/*": ["./src/*"]
    }
    },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
